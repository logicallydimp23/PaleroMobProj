<div class= "main">
  <br>
<h1>Welcome to the Blog!</h1>
  <br>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-md-1100">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center">
        <h2><strong><%= post.title %></strong></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div>
        <%= raw(post.body).truncate(358) %>
      </div>
       <br>
      <div> 
       <%= link_to "Show", post_path(post), class: "btn btn-warning active btn-md" %>
        <br>
        <br>
      </div>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary active btn-md" %>
        <br>
        <br>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger active btn-md", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
      <hr />
    </div>
    <% end %>
  </div>
</div>
</div>